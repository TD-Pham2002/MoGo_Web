mixin menuLink(title, href = "#")
	li.header-menu-item 
		a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title, active)
	.header-bottom-item(class= active)
		span.header-bottom-number= number
		span.header-bottom-text= title

mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-heading= title 
		if desc 
			p.block-box-desc= desc

mixin aboutItem(data)
	.about-item 
		img.about-image(src= data.src, alt= data.alt)
		.about-content 
			i.about-icon(class= data.icon)
			span.about-title= data.title 

mixin serviceItem(src, title, desc)
	.service-item
		img.service-item-icon(src= src)
		.service-item-info 
			h3.service-item-title= title
			p.service-item-desc= desc

mixin wedoItem(src, title, desc, active = "")
	.wedo-item(class= active)
		.wedo-item-header
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title
			i.wedo-item-arrow.fal.fa-angle-down
		.wedo-item-content 
			.wedo-item-text= desc

mixin teamSocial(facebook= "#", twitter= "#", pinterest= "#", instagram= "#")
	ul.team-social
		li.team-social-item 
			a.team-social-link(href= facebook)
				i.fab.fa-facebook-f
		li.team-social-item 
			a.team-social-link(href= twitter)
				i.fab.fa-twitter
		li.team-social-item 
			a.team-social-link(href= pinterest)
				i.fab.fa-pinterest
		li.team-social-item 
			a.team-social-link(href= instagram)
				i.fab.fa-instagram


mixin teamItem(src= "../images/img-team1.png", name= "Matthew Dix",position= "Graphic Design")
	.team-item 
		.team-main
			img.team-image(src= src)
			.team-content
				if block
					block
		.team-info
			h3.team-name= name
			span.team-position= position

mixin workItem(src, full= "", icon = "./images/img-work-icon.png", title = "creatively designed", desc = "Lorem ipsum dolor sit")
	.work-item(class= full)
		img.work-image(src= src)
		.work-content 
			img.work-icon(src= icon)
			h3.work-title= title
			span.work-desc.text.text--light= desc

mixin peopleItem(src, name, desc, job="Graphic Design")
	li.people-item 
		img.people-avatar(src= src)
		.people-info
			h3.people-name= name
			span.people-job.text.text--light= job
			p.people-desc.text= desc

mixin storyItem(src, dateNumber, dateText, title, desc, view, comment)
	li.story-item 
		.story-media
			img.story-image(src= src)
			.story-date 
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text 
			p.story-desc-inner= desc
		.story-meta
			.story-meta-item 
				i.story-meta-icon.fa.fa-eye
				span.story-meta-number.text= view
			.story-meta-item 
				i.story-meta-icon.fa.fa-comment
				span.story-meta-number.text= comment

mixin quoteItem(src="../images/img-quote.png", type= false, desc = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.", author= "Jon Doe")
	.quote-item
		if type == false
			.quote-icon
				img(src= src)
		else
			img(src= src).quote-image
		.quote-info 	
			p.quote-desc= desc
			span.quote-author= author